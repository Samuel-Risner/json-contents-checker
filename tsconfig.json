{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",

    "rootDir": "./src",
    "outDir": "./dist",
    
    "declarationDir": "./@types",
    "declaration": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext"
  }
}
